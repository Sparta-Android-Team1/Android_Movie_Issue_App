<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.android_movie_issue_app.fragments.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_channel"
        android:name="com.example.android_movie_issue_app.fragments.channel.ChannelFragment"
        android:label="@string/title_channel"
        tools:layout="@layout/fragment_channel" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.android_movie_issue_app.fragments.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_my_page"
        android:name="com.example.android_movie_issue_app.fragments.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_my_page" />
</navigation>